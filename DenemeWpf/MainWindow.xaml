<Window x:Class="DenemeWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DenemeWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-34">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="30*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1" HorizontalAlignment="Left" Width="800">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120*"/>
                <ColumnDefinition Width="300*"/>
                <ColumnDefinition Width="180*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Fill="Black" />
            <Rectangle Grid.Column="2" Fill="Purple" />
        </Grid>

        <Rectangle Grid.Row="0" Fill="DarkBlue"/>
        <Rectangle Grid.Row="2" Fill="DarkSeaGreen" />
    </Grid>
</Window>
