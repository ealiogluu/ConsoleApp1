<Window
    x:Class="DenemeWpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DenemeWpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:DenemeWpf.View.UserControls"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Grid
        Height="435"
        Margin="0,-1,0,0"
        VerticalAlignment="Top"
        RenderTransformOrigin="0.5,0.5">
        <Grid.RowDefinitions>
            <RowDefinition Height="26*" />
            <RowDefinition Height="119*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="91*" />
            <ColumnDefinition Width="709*" />
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="ASDASD" />
            <TextBox x:Name="txtMain" Height="50" />
            <TextBox Height="50" Text="{Binding ElementName=txtMain, Path=Text}" />
        </StackPanel>

        <DataGrid
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            AutoGenerateColumns="True"
            ItemsSource="{Binding BookNames}" />
    </Grid>
</Window>
